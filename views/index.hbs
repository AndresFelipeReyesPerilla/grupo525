<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>App</title>
</head>

<body>

    <form id="contactForm" method="POST" action="http://localhost:3000/contact-form">
        <h2>{{ title }}</h2>
        <div>
            <label for="sex">Sexo</label>
            <select name="sex" id="sex" aria-placeholder="Sexo">
                <option value="M">Masculino</option>
                <option value="F">Femenino</option>
            </select>
            <input type="date" id="date" name="date" placeholder="Fecha">
        </div>
        <div>
            <input type="text" id="name" name="name" placeholder="Nombre">
            <input type="text" id="lastName" name="lastName" placeholder="Apellido">
        </div>
        <div>
            <input type="email"   id="email" name="email" placeholder="Corre">
        </div>
        <div>
            <input type="text"   id="address" name="address" placeholder="Direccion">
        </div>
        <div>
            <input type="text" id="typeHome" name="typeHome" placeholder="Casa/Apartamento">
            <input type="text" id="country" name="country" placeholder="Pais">
        </div>
        <div>
            <input type="text" id="state" name="state" placeholder="Departamento">
            <input type="text" id="city" name="city" placeholder="Ciudad">
        </div>
        <div>
            <textarea id="departament" name="departament"></textarea>
        </div>  

        <button type="submit">Submit</button>
    </form>
</body>

  <script src="./js/index.js"></script>
</html>